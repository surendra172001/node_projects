  <script>
    if (document.readyState == "loading") {
      document.addEventListener("DOMContentLoaded", addAllEventListeners);
    } else {
      addAllEventListeners();
    }
    function addAllEventListeners() {
      const removeButtons = document.getElementsByClassName('remove');
      for (let removeButton of removeButtons) {
        removeButton.addEventListener('click', handleRemoveClick)
      }
    }

    function handleRemoveClick(event) {

      const deliveryBoyRow = event.target.parentElement;
      const deliveryBoyId = deliveryBoyRow.getElementsByClassName('delivery_boy_id')[0].value;
      const url = `/admin/delivery_boy_remove/<%= admin._id %>`;
      $.ajax({
        url: url,
        type: "delete",
        data: {
          deliveryBoyId,
        },
        dataType: "json",
        success: function (data) {
          console.log('HOLA');
          console.log(data);
          event.target.parentElement.parentElement.remove();
        },
      });

    }

  </script>
