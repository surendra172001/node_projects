    <% for(var i=0; i < delivery_boys.length; i++) { %>
    <div class="row" style="text-align: center;">
      <div class="col-6">
        <h3 class="delivery_boy_name"><%=delivery_boys[i].name%></h3>  
      </div>
      <div class="col-6">
        <input type="hidden" class="delivery_boy_id" value="<%= delivery_boys[i]._id %>">
        <button class="remove btn btn-danger mx-2">remove</button>
      </div>
    </div>
    <br /><br />
    <% } %>
