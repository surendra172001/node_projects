            <% for(var i=0; i < pizzalist.length; i++) { %>
            <div class="">
              <div class="row">
                <div class="col-md-3 pl-0">
                  <img
                    src="/images/<%=pizzalist[i].title%>.jpg"
                    alt="Image1"
                    class="img-fluid"
                  />
                </div>
                <div class="col-md-6">
                  <h3 class="pt-1"><%=pizzalist[i].name%></h3>
                  <h5 class="text-secondary">Pizza</h5>
                  <h5 class="pt-1 item-price">â‚¹<%=pizzalist[i].price%></h5>

                  <form action="/orders/remove/<%= i %>" method="post">
                    <button
                      type="submit"
                      class="btn btn-danger mx-2"
                      name="remove"
                    >
                      Remove
                    </button>
                  </form>
                </div>
                <div class="col-md-3 py-5">
                  <div>
                    <button
                      name="minus"
                      type="button"
                      class="btn bg-light border rounded-circle"
                      onclick="decreaseCnt('<%= i %>', '<%= pizzalist[i]._id %>')"
                    >
                      <i class="fas fa-minus"></i>
                    </button>
                    <input
                      type="text"
                      name="check"
                      id="<%= pizzalist[i]._id %>"
                      value="<%=numberlist[i]%>"
                      style="text-align: center; background-color: white"
                      class="form-control w-25 d-inline item-cnt"
                      onchange="updateCnt('<%= i %>', '<%= pizzalist[i]._id %>')"
                    />
                    <button
                      name="plus"
                      type="button"
                      class="btn bg-light border rounded-circle"
                      onclick="increaseCnt('<%= i %>', '<%= pizzalist[i]._id %>')"
                    >
                      <i class="fas fa-plus"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
