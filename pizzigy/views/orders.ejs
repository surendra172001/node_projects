            <div class="row">
              <h6 class="col-6">Total: Rs.</h6>
              <h6 class="col-6" style="margin-left: -120px;" id="cartTotal">0</h6>
            </div>
            <br />
            <br />
            <br />

            <form action="/payment/<%= customer._id %>" method="POST">
              <script
                src="//checkout.stripe.com/v2/checkout.js"
                class="stripe-button"
                data-key="<%= key %>"
                data-amount=""
                data-currency="inr"
                data-name="Pizzigy"
                data-description="Wholesome pizzas and Enjoyment"
                data-locale="auto"
              ></script>
            </form>
          </div>
        </div>
